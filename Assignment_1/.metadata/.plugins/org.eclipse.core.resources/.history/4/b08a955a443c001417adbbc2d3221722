	public MyShuffletterTile getTile(Position p) {
		//get position of tile
		//check tile is on board
		for (MyShuffletterTile tile : board) {
			if (tile.getPosition() == p) {
				return tile;
			}
		}
		System.err.println("Sorry! This tile is not on the board!");
		return null;
	}
	
